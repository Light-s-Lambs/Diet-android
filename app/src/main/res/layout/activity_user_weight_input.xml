<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/upperToolbarLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintHorizontal_bias="0.5">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:contentDescription="@string/userWeightLogoLabel"
            app:layout_constraintEnd_toStartOf="@+id/myPageButton"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/logo512" />

        <Button
            android:id="@+id/myPageButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:contentDescription="@string/userWeightMyPageLabel"
            android:text="@string/userWeightMyPageLabel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/contentsLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.8"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/upperToolbarLayout">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/dateGuideLineStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.2" />

        <TextView
            android:id="@+id/dateTextView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:autoSizeMaxTextSize="48sp"
            android:autoSizeMinTextSize="12sp"
            android:autoSizeStepGranularity="2sp"
            android:autoSizeTextType="uniform"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/userWeightMyPageLabel"
            app:layout_constraintEnd_toStartOf="@+id/dateGuideLineEnd"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHeight_percent="0.4"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/dateGuideLineStart"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/dateGuideLineEnd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.8" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/weightInfoGuideLineStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.1" />

        <TextView
            android:id="@+id/weightTextView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:autoSizeMaxTextSize="48sp"
            android:autoSizeMinTextSize="12sp"
            android:autoSizeStepGranularity="2sp"
            android:autoSizeTextType="uniform"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/userWeightWeightLabel"
            app:layout_constraintEnd_toStartOf="@+id/percentageBodyFatTextView"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHeight_percent="0.1"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/weightInfoGuideLineStart"
            app:layout_constraintTop_toBottomOf="@+id/dateTextView" />

        <TextView
            android:id="@+id/percentageBodyFatTextView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:autoSizeMaxTextSize="48sp"
            android:autoSizeMinTextSize="12sp"
            android:autoSizeStepGranularity="2sp"
            android:autoSizeTextType="uniform"
            android:gravity="center"
            android:maxLines="2"
            android:text="@string/userWeightPercentageBodyFatLabel"
            app:layout_constraintEnd_toStartOf="@+id/amountOfMuscleTextView"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHeight_percent="0.1"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/weightTextView"
            app:layout_constraintTop_toBottomOf="@+id/dateTextView" />

        <TextView
            android:id="@+id/amountOfMuscleTextView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:autoSizeMaxTextSize="100sp"
            android:autoSizeMinTextSize="12sp"
            android:autoSizeStepGranularity="2sp"
            android:autoSizeTextType="uniform"
            android:gravity="center"
            android:maxLines="2"
            android:text="@string/userWeightAmountOfMuscleLabel"
            app:layout_constraintEnd_toStartOf="@+id/weightInfoGuideLineEnd"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHeight_percent="0.1"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/percentageBodyFatTextView"
            app:layout_constraintTop_toBottomOf="@+id/dateTextView" />


        <EditText
            android:id="@+id/weightEditText"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:ems="10"
            android:gravity="bottom|center_horizontal"
            android:hint="@string/userWeightKgLabel"
            android:importantForAutofill="no"
            android:inputType="numberSigned"
            app:layout_constraintEnd_toStartOf="@+id/percentageBodyFatEditText"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHeight_percent="0.3"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@id/weightInfoGuideLineStart"
            app:layout_constraintTop_toBottomOf="@+id/weightTextView" />

        <EditText
            android:id="@+id/percentageBodyFatEditText"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:ems="10"
            android:gravity="bottom|center_horizontal"
            android:hint="@string/userWeightPercentLabel"
            android:importantForAutofill="no"
            android:inputType="numberSigned"
            app:layout_constraintEnd_toStartOf="@+id/amountOfMuscleEditText"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHeight_percent="0.3"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/weightEditText"
            app:layout_constraintTop_toBottomOf="@+id/percentageBodyFatTextView" />

        <EditText
            android:id="@+id/amountOfMuscleEditText"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:ems="10"
            android:gravity="bottom|center_horizontal"
            android:hint="@string/userWeightKgLabel"
            android:importantForAutofill="no"
            android:inputType="numberSigned"
            app:layout_constraintEnd_toStartOf="@+id/weightInfoGuideLineEnd"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHeight_percent="0.3"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/percentageBodyFatEditText"
            app:layout_constraintTop_toBottomOf="@+id/amountOfMuscleTextView" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/weightInfoGuideLineEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.9" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/LowerToolbarLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintTop_toBottomOf="@+id/contentsLayout">

        <Button
            android:id="@+id/weightInfoButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/userWeightWeightButtonLabel"
            app:layout_constraintEnd_toStartOf="@+id/activityInfoButton"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.25"
            tools:layout_editor_absoluteY="19dp" />

        <Button
            android:id="@+id/activityInfoButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/userWeightActivityButtonLabel"
            app:layout_constraintEnd_toStartOf="@+id/dietInfoButton"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/weightInfoButton"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.25"
            tools:layout_editor_absoluteY="19dp" />

        <Button
            android:id="@+id/dietInfoButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/userWeightDietButtonLabel"
            app:layout_constraintEnd_toStartOf="@+id/historyButton"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/activityInfoButton"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.25"
            tools:layout_editor_absoluteY="19dp" />

        <Button
            android:id="@+id/historyButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/userWeightHistoryButtonLabel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/dietInfoButton"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.25"
            tools:layout_editor_absoluteY="19dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>